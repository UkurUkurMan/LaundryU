<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".OrderAct">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="ORDER FORM"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name"
        android:layout_margin="10dp"
        android:hint="Name"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_phone"
        android:layout_margin="10dp"
        android:hint="Phone"
        />
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/primary">
        <Button
            android:id="@+id/idExp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Transparent"/>
        <LinearLayout
            android:clickable="false"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:text="EXPRESS"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <include
                android:id="@+id/expandLinear"
                layout="@layout/card_expand"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/primary">
        <Button
            android:id="@+id/idPrem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Transparent"/>
        <LinearLayout
            android:clickable="false"
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:text="PREMIUM"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <include
                android:id="@+id/expandLinear2"
                layout="@layout/card_expand2"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/primary">
        <Button
            android:id="@+id/idReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Transparent"/>
        <LinearLayout
            android:clickable="false"
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:text="REGULER"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <include
                android:id="@+id/expandLinear3"
                layout="@layout/card_expand3"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnOrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE ORDER"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            />
    </LinearLayout>

</LinearLayout>