<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".home">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, Affan"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/kategori_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:layout_below="@id/welcome"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        />
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/kategori_text"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/idCuciKrg"
            android:clickable="true"
            android:layout_width="170dp"
            android:layout_height="70dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left|center"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cuci"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CUCI KERING"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idCuciBsh"
            android:clickable="true"
            android:layout_width="170dp"
            android:layout_height="70dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_gravity="center|end"

            app:cardBackgroundColor="@color/primary">
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left|center"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cuci"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CUCI BASAH"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idCuciStr"
            android:clickable="true"
            android:layout_width="170dp"
            android:layout_height="70dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_gravity=""
            app:cardBackgroundColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left|center"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cuci"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CUCI SETRIKA"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:clickable="false"
            android:id="@+id/idCM"
            android:layout_width="170dp"
            android:layout_height="70dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_gravity="center|end"
            app:cardBackgroundColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left|center"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cuci"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMING SOON"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_row="0"-->
        <!--            android:layout_column="0"-->
        <!--            android:text="EXPRESS" />-->
    </GridLayout>

    <TextView
        android:id="@+id/proses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dalam Proses"
        android:layout_below="@id/grid"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/card_view"
        android:layout_below="@id/proses"
        />
</RelativeLayout>